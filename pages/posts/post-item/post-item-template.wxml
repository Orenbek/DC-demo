<template name='postItem'>
  <view class='post-container'>
    <view class='post-author-date'>
      <image class='post-author' src="{{avatar_img_src}}"></image>
      <text class='post-date'>{{postTime}}</text>
    </view>
    <text class='post-title'>{{title}}</text>
    <image class='post-image' src='{{post_img_src}}'></image>
    <text class='post-content'>{{main_content}}</text>
    <view class='post-like'>
      <image class='post-like-image' src='/images/icon/thumb-up.png'></image>
      <text class='post-like-font'>{{thumb_up}}</text>
      <image class='post-like-image' src='/images/icon/view.png'></image>
      <text class='post-like-font'>{{read}}</text>
    </view>
  </view>
</template>